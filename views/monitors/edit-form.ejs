<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'Edit a Monitor'}) %>
    <link rel="stylesheet" href="/styles/monitor-form.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <section class="monitor">
        <h2>Edit Monitor</h2>
    </section>

    <form method="POST" action="/monitors/<%= monitor._id %>?_method=PUT">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= monitor.name %>" required>
        <br>
        <label for="description">Description:</label>
        <textarea id="description" name="description" value="<%= monitor.description %>" required></textarea>
        <br>
        <label for="screenSize">Screen Size:</label>
        <select id="screenSize" name="screenSize" required>
            <option value=""></option>
            <option value="24">24 inches</option>
            <option value="27">27 inches</option>
            <option value="32">32 inches</option>
            <option value="34">34 inches</option>
            <option value="40">40 inches</option>
        </select>
        <br>
        <label for="resolution">Resolution:</label>
        <select id="resolution" name="resolution" required>
            <option value=""></option>
            <option value="1920x1080">1920x1080</option>
            <option value="2560x1440">2560x1440</option>
            <option value="3440x1440">3440x1440</option>
            <option value="3840x2160">3840x2160</option>
            <option value="5120x2160">5120x2160</option>
        </select>
        <br>
        <label for="refreshRate">Refresh Rate:</label>
        <select id="refreshRate" name="refreshRate" required>
            <option value=""></option>
            <option value="60">60</option>
            <option value="72">72</option>
            <option value="75">75</option>
            <option value="144">144</option>
            <option value="165">165</option>
            <option value="180">180</option>
            <option value="240">240</option>
        </select>
        <br>
        <label for="responseTime">Response Time:</label>
        <select id="responseTime" name="responseTime" required>
            <option value=""></option>
            <option value="0.3ms">0.3ms</option>
            <option value="0.5ms">0.5ms</option>
            <option value="1ms">1ms</option>
            <option value="4ms">4ms</option>
            <option value="5ms">5ms</option>
        </select>
        <br>
        <label for="panelType">Panel Type:</label>
        <select id="panelType" name="panelType" required>
            <option value=""></option>
            <option value="IPS">IPS</option>
            <option value="VA">VA</option>
            <option value="TN">TN</option>
            <option value="OLED">OLED</option>
        </select>
        <br>
        <label for="curved">Curved:</label>
        <select id="curved" name="curved" required>
            <option value=""></option>
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <br>
        <label for="category">Category:</label>
        <select id="category" name="category" required>
            <option value=""></option>
            <option value="Gaming">Gaming</option>
            <option value="Office">Office</option>
        </select>
        <br>
        <label for="photo">Photo (URL):</label>
        <input type="text" id="photo" name="photo" value="<%= monitor.photo %>" required>
        <br>
        <input type="submit" value="Create Product">
    </form>


    <%- include('../partials/footer.ejs') %>
</body>

</html>