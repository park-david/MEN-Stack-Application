<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'Edit a Monitor'}) %>
    <link rel="stylesheet" href="/styles/monitor-form.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <section class="monitor">
        <h2>Edit Monitor</h2>
    </section>

    <form method="POST" action="/monitors/<%= monitor._id %>?_method=PUT">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= monitor.name %>" required>
        <br>
        <label for="description">Description:</label>
        <textarea id="description" name="description" value="<%= monitor.description %>" required><%= monitor.description %></textarea>
        <br>
        <label for="screenSize">Screen Size:</label>
        <select id="screenSize" name="screenSize" required>
            <option value=""></option>
            <option value="24" selected>24 inches</option>
            <option value="27" selected>27 inches</option>
            <option value="32" selected>32 inches</option>
            <option value="34" selected>34 inches</option>
            <option value="40" selected>40 inches</option>
        </select>
        <br>
        <label for="resolution">Resolution:</label>
        <select id="resolution" name="resolution" required>
            <option value=""></option>
            <option value="1920x1080" selected>1920x1080</option>
            <option value="2560x1440" selected>2560x1440</option>
            <option value="3440x1440" selected>3440x1440</option>
            <option value="3840x2160" selected>3840x2160</option>
            <option value="5120x2160" selected>5120x2160</option>
        </select>
        <br>
        <label for="refreshRate">Refresh Rate:</label>
        <select id="refreshRate" name="refreshRate" required>
            <option value=""></option>
            <option value="60" selected>60</option>
            <option value="72" selected>72</option>
            <option value="75" selected>75</option>
            <option value="144" selected>144</option>
            <option value="165" selected>165</option>
            <option value="180" selected>180</option>
            <option value="240" selected>240</option>
        </select>
        <br>
        <label for="responseTime">Response Time:</label>
        <select id="responseTime" name="responseTime" required>
            <option value=""></option>
            <option value="0.03ms" selected>0.03ms</option>
            <option value="0.3ms" selected>0.3ms</option>
            <option value="0.5ms" selected>0.5ms</option>
            <option value="1ms" selected>1ms</option>
            <option value="4ms" selected>4ms</option>
            <option value="5ms" selected>5ms</option>
        </select>
        <br>
        <label for="panelType">Panel Type:</label>
        <select id="panelType" name="panelType" required>
            <option value=""></option>
            <option value="IPS" selected>IPS</option>
            <option value="VA" selected>VA</option>
            <option value="TN" selected>TN</option>
            <option value="OLED" selected>OLED</option>
            <option value="QD-OLED" selected>QD-OLED</option>
        </select>
        <br>
        <label for="curved">Curved:</label>
        <select id="curved" name="curved" required>
            <option value=""></option>
            <option value="false" selected>No</option>
            <option value="true" selected>Yes</option>
        </select>
        <br>
        <label for="category">Category:</label>
        <select id="category" name="category" required>
            <option value=""></option>
            <option value="Gaming" selected>Gaming</option>
            <option value="Office" selected>Office</option>
        </select>
        <br>
        <label for="photo">Photo (URL):</label>
        <input type="text" id="photo" name="photo" value="<%= monitor.photo %>" required>
        <br>
        <input type="submit" value="Edit Monitor">
    </form>


    <%- include('../partials/footer.ejs') %>
</body>

</html>